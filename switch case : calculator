// calculator using switch case taking input from the user 
#include <stdio.h>

int main() {
    float a , b ;
    char operation ;
    
    printf("Enter the value of a = ");
    scanf("%f",&a);
    
    printf("Enter the value of b = ");
    scanf("%f",&b);
    
    printf(" Select the operation\n 1 for add\n 2 for sub\n 3 for multiplication\n 4 for divide\n 5 for modulus\n ");
    scanf("%d",&operation);
    
    
    switch(operation){
        case 1 :
            printf("The addition of %f and %f is %.2f \n",a,b,a+b);
            break;
            
        case 2 :
            printf("The addition of %f and %f is %.2f \n",a,b,a-b);
            break;
        
        case 3 :
            printf("The addition of %f and %f is %.2f \n",a,b,a*b);
            break;
            
        case 4 :
            printf("The addition of %f and %f is %.2f \n",a,b,a/b);
            break;
    }

    return 0;
}
