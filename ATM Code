#include<stdio.h>

int main(){
int pass ;
int balance = 1000;
int amt,try=0;
int deposit, withdraw , operation;

printf("-----welcome to ATM-----\n");

printf("Please enter your password\n");
scanf("%d",&pass);

do{
if(pass == 1234){
        printf("Access Granted\n");


printf("Select the operation\n 1.Withdraw\n 2.Deposit\n 3.Balance\n");
scanf("%d",&operation);

switch(operation){
 case 1 : printf("Enter the amount out want to withdraw\n");
          scanf("%d",&amt);
          if(amt<=balance){
          printf("Please collect your cash %d\n",amt);
          printf("Your balance amount is %d\n",balance-amt);
          }
  break;

case 2 : printf("Enter the amount you want to deposit\n");
         scanf("%d",&deposit);
         balance += deposit;
         printf("Balance = %d",balance);
case 3 : printf("Your balance is %d\n",balance);

         }
 }else {
        printf("Please enter correct pass\n");
        try++;

 }      
        }while(try > 3);
}
