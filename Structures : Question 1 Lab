
q1
#include<stdio.h>

struct student
{
    int RollNumber;
    char name[50];
    char sex[10];
    float ExamScore;
};

int main() {
    int n;
    int i = 4;

    printf("Enter the number of student : ");
    scanf("%d",&n);
    struct student st[n];
    
   int operation;
    do 
    {

    printf("\nChose the operation\n");
    printf(" 1.Add student records\n 2.View all student records\n 3.maximum score\n 4.minimum score\n \nEnter the number for operation\n");
    scanf("%d",&operation);
    switch (operation)
    {
    case 1:
            for(int i=0 ;i<n ; i++){
            printf("\nEnter student %d: \n",i+1);

            printf("RollNumber = ");
            scanf(" %d",&st[i].RollNumber);

            printf("Name = ");
            scanf(" %s",st[i].name);

            printf("Sex = ");
            scanf(" %s",st[i].sex);

            printf("Exam Score = ");
            scanf("%f",&st[i].ExamScore);
        }
        break;
    
    case 2:
            for(int i=0 ;i<n ; i++){
            printf("\n Student %d record\n",i+1);

            printf("RollNumber = %d\n",st[i].RollNumber);
            
            printf("Name = %s\n",st[i].name);
            
            printf("Sex = %s\n",st[i].sex);
            
            printf("Exam Score = %.2f\n",st[i].ExamScore);
        }
        break;

    case 3:
            printf("\nMaximum marks\n");
            float max = st[0].ExamScore;
            int maxIndex = 0;

            for (int i = 1; i < n; i++) {
            if (st[i].ExamScore > max) {
            max = st[i].ExamScore;
            maxIndex = i;
                }
            }
            printf("Student with highest score: %s (%.2f)\n", st[maxIndex].name, max);

        break;

    case 4:
            printf("\nMinimum marks\n");
            float min = st[0].ExamScore;
            int minIndex = 0;

            for (int i = 1; i < n; i++) {
            if (st[i].ExamScore < min) {
            min = st[i].ExamScore;
            minIndex = i;
                }
            }
            printf("Student with highest score: %s (%.2f)\n", st[minIndex].name, min);
            printf("\nMinimum marks\n");
    
    default:
            printf("Enter a valid operation");
        break;
    }
    }while(operation<=4);

    return 0;
}








q2

// define a struct complex use typedef to read two complex numbers and perform addition and substraction of these two complex numbers 
#include<stdio.h>

typedef struct{
  float real;
  float imag;
  
}complex;

int main()
{
    complex c1,c2,sum;
    
    printf("Enter the first complex number value a+bi ");
    scanf("%f %f",&c1.real,&c1.imag);
    
    printf("Enter the second complex number value a+bi ");
    
    scanf("%f %f",&c2.real,&c2.imag);
    
    sum.real = c1.real+c2.real;
    sum.imag = c1.imag+c2.imag;

    printf("The total sum is %.2f+%.2fj\n",sum.real,sum.imag);
    
    
    sum.real = c1.real-c2.real;
    sum.imag = c1.imag-c2.imag;
    printf("The total substraction is %.2f-%.2fj",sum.real,sum.imag);
    
    
}



q3


#include<stdio.h>


struct employe{
    int id;
    char name[20];
};

int main(){
    struct employe e[3];
    struct employe* ptr = e;
    
    for(int i=0 ; i<3 ; i++){
        printf("Enter employee details %d \n",i+1);
        
        
        printf("Enter id = ");
        scanf("%d",&(ptr+i)->id);
        
        printf("Enter name = ");
        scanf("%s",(ptr+i)->id);
    
    }
    
    for(int i=0 ; i<3 ; i++){
        printf("Employee %d:\n", i + 1);
    
        printf("id = %d\n",(ptr+i)->id);
    
        printf("Enter name = %s",(ptr+i)->name);
        
            }
    return 0;
    
}





































// NESTED STRUCTURE 
#include<stdio.h>


struct address{
    char city[50];
    int pincode;
};

struct student{
    int roll;
    char name[10];
    struct address addr;// nested structure -> the above structure is called here and we have given name as addr
};
int main(){
    struct student s1 = {1,"Atharva",{"hyd",500001}};
    
    printf("roll %d\n",s1.roll);
    printf("name %s\n",s1.name);
    printf("city %s\n",s1.addr.city);//to access the nested attributes we need to use the nested name.attribute
    printf("pincode %d\n",s1.addr.pincode);
    
}

