    char name[50];
    char sex[10];
    float ExamScore;
};

int main() {
    int n;
    int i = 4;

    printf("Enter the number of student : ");
    scanf("%d",&n);
    struct student st[n];
    
   int operation;

    
    
    do 
    {

    printf("\nChose the operation\n");
    printf("1.Add student records\n 2.View all student records\n 3.maximum score\n 4.minimum score\n \nEnter the number for operation\n");
    scanf("%d",&operation);
    switch (operation)
    {
    case 1:
            for(int i=0 ;i<n ; i++){
            printf("\nEnter student %d: \n",i+1);

            printf("RollNumber = ");
            scanf(" %d",&st[i].RollNumber);

            printf("Name = ");
            scanf(" %s",st[i].name);

            printf("Sex = ");
            scanf(" %s",st[i].sex);

            printf("Exam Score = ");
            scanf("%f",&st[i].ExamScore);
        }
        break;
    
    case 2:
            for(int i=0 ;i<n ; i++){
            printf("\n Student %d record\n",i+1);

            printf("RollNumber = %d\n",st[i].RollNumber);
            
            printf("Name = %s\n",st[i].name);
            
            printf("Sex = %s\n",st[i].sex);
            
            printf("Exam Score = %.2f\n",st[i].ExamScore);
        }
        break;

    case 3:
            printf("\nMaximum marks\n");
            int max_score = 0;
            if(max_score){

            }
        break;

    case 4:
            printf("\nMinimum marks\n");
    
    default:
        break;
    }
    }while(operation<=4);

    return 0;
}
