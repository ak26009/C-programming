#include<stdio.h>

struct student
{
    int RollNumber;
    char name[50];
    char sex[10];
    float ExamScore;
};

int main() {
    int n;
    printf("Enter the number of student : ");
    scanf("%d",&n);
    struct student st[n];
    
    for(int i=0 ;i<n ; i++){
            printf("\nEnter student %d: \n",i+1);

            printf("RollNumber = ");
            scanf(" %d",&st[i].RollNumber);

            printf("Name = ");
            scanf(" %s",st[i].name);

            printf("Sex = ");
            scanf(" %s",st[i].sex);

            printf("Exam Score = ");
            scanf("%f",&st[i].ExamScore);
        }
  

    int operation;
    printf("\nChose the operation\n");
    printf("1.Add student records\n 2.View all student records\n 3.maximum score\n 4.minimum score\n Enter the number for operation");
    scanf("%d",&operation);

    switch (operation)
    {
    case 1:
        
        break;
    
    default:
        break;
    }
    return 0;
}
