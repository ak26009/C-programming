SWAP CODE USING POINTERS

#include <stdio.h>
int swap(int *x,int *y);
int swap(int *x,int *y){
    int temp;
    temp = *x;
    *x = *y;
    *y= temp;
}


int main() {
    int a = 10;
    int b = 20;
    printf("value  of %d and %d before swaping\n",a,b);
    swap(&a,&b);
    printf("value  of %d and %d after swaping\n",a,b);    
    return 0;
}




GREATEST COMMON DIVISOR

int gcd(int a , int b ){
  if(b==0){
    return a;
    }
  return gcd(b,a%b);
}
int main(){
  int n1,n2;

  printf("Enter n1\n");
  scanf("%d",&n1);

  printf("Enter n2\n");
  scanf("%d",&n2);

  printf("The greatest common divisor of %d and %d is %d",n1,n2,gcd(n1,n2));
  return 0;
  }





REVERSE THE NUMBER USING RECURSIVE FUNCTION

#include<stdio.h>

int reverse_number = 0;

int reverse(int n){
  if(n==0){
    return reverse_number;
  }
  int digit = n%10;
  reverse_number = reverse_number*10+digit;
  return reverse(n/10);
}
int main(){
  int num;
  
  printf("Enter the value");
  scanf("%d",&n);

  int result = reverse(num);
  printf("The revese is %d ",result);
  return 0;
  }



  

  
