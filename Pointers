// In this code we made a function which will change the value of a by 30 times 
// &a <--- gives the adress of the variable 
// *a <--- we can access or modify the data inside the variable 

#include <stdio.h>

int changeby30(int*a){
    *a = *a*30;
}
int main() {
    int a = 10;
    printf("The value of a is %d\n",a);
    
    changeby30(&a);
    printf("The value of a is %d\n",a);
    
    return 0;
}






BASIC CODE OF POINTERS

#include<stdio.h>

int main(){
    int i = 12;
    int* j = &i;  // here j is storing the address of i
    printf("The address of i is %p\n",j);
    printf("The address of i is %p\n",&i);
    
    printf("The value at address i is  %d\n", *(&i)); // HERE WE GET THE VALUE OF I THAT IS 12 
    return 0 ;
}




SOME BASIC OF POINTERS 

#include<stdio.h>

int main(){
    int i = 8;
    int *j ;
    j = &i; 
    
    printf("add i = %u\n",&i); // this shows the address of i 
    printf("add i = %u\n",j); // this shows the adress of i as j = &i
    printf("add j = %u\n",&j); //this shows the address of j
    
    printf("value i = %d\n",i); // this shows the value inside the i  
    printf("value i = %d\n",*(&i)); // this shows the value inside the i 
    printf("value i = %d\n",*j);// this shows the value inside the i  as j = &i
    
    return 0 ;
}








//TO FIND MINIMUM AND MAXIMUM USING arr[i] inexing method  
#include<stdio.h>

int main()
{
    int arr[6] = {15,8,23,42,4,16};
    int* p = arr;
    
    int min = *p;
    int max = *p;
    
    for(int i=0 ; i<6 ; i++)
    {
        if(arr[i]<min)
        {
            min = arr[i];
        }
        if(arr[i]>max)
        {
            max = arr[i];
        }
    }
    printf("Min value = %d \n",min);
    printf("Max value = %d \n",max);
} 







//TO FIND MINIMUM AND MAXIMUM USING POINTERS TRAVERSE METHOD
#include<stdio.h>

int main()
{
    int arr[6] = {15,8,23,42,4,16};
    int* p = arr;
    int* end = arr+6;
    
    int min = *p;
    int max = *p;
    
    while(p<end){
        if(*p<min) min = *p;
        if(*p>max) max = *p;
        p++;
    }
    printf("Min value = %d \n",min);
    printf("Max value = %d \n",max);
    return 0;
} 






// TO FIND THE VOWELS INSIDE THE STRING
#include <stdio.h>
#include <ctype.h>   // for tolower()

// Function to count vowels using pointers
int countVowels(char *str) {
    int count = 0;
    char *p = str;   // pointer to the start of string

    while (*p != '\0') {   // loop until end of string
        char ch = tolower(*p);  // make it lowercase for easy check
        if (ch == 'a' || ch == 'e' || ch == 'i' || ch == 'o' || ch == 'u') {
            count++;
        }
        p++; // move pointer to next character
    }

    return count;
}

int main() {
    char str[100];

    printf("Enter a string: ");
    scanf("%[^\n]", str);   // read input including spaces until ENTER is pressed

    int vowelCount = countVowels(str);

    printf("Total vowels = %d\n", vowelCount);

    return 0;
}











//POINTER SUBSTRACTION
#include<stdio.h>

int main()
{
    int arr[6] = {5,10,15,20,25};
    int* p1 = &arr[1];
    int* p2 = &arr[4];

    printf("p2 - p1 = %d  \n",p2-p1);
    return 0;
} 
