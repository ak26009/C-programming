#include<stdio.h>
#define SUB 4

int main(){
    
    int num_students;
    printf("Enter the number of students\n");
    scanf("%d",&num_students);
    
    int marks[num_students][SUB];
    
    for(int i=0 ; i<num_students ;i++){
        printf("Enter marks for student %d \n",i+1);
        for(int j=0 ; j<SUB ; j++){
            printf("Enter marks for subject %d ",j+1);
            scanf("%d",&marks[i][j]);
        }
    
    }
    
    printf("\n--- Mark Sheet ---\n");
    printf("Student |\t");
    for (int j = 0; j < SUB; j++) {    
        printf(" Subject %d |\t", j + 1);
    }
    printf("\n");
    
    for (int i = 0; i < num_students; i++) {
    printf("%d \t\t|", i + 1);
    for (int j = 0; j < SUB; j++) {
        printf("%d \t\t|", marks[i][j]);
    }
    printf("\n");
}


    for(int j=0; j<SUB ;j++){
        int highest_marks = 0;
        for(int i =0; i<num_students;i++){
            if(marks[i][j]>highest_marks){
                highest_marks = marks[i][j];
            }
        }
        printf("Subject %d: Highest Mark = %d\n", j + 1, highest_marks);
    }
    
    return 0;
}





















#include <stdio.h>

#define STUDENTS 10
#define SUBJECTS 4

int main() {
    int marks[STUDENTS][SUBJECTS];
    int i, j;

    // Input marks
    printf("Enter marks for %d students in %d subjects:\n", STUDENTS, SUBJECTS);
    for (i = 0; i < STUDENTS; i++) {
        printf("\nStudent %d:\n", i + 1);
        for (j = 0; j < SUBJECTS; j++) {
            printf("  Subject %d: ", j + 1);
            scanf("%d", &marks[i][j]);
        }
    }

    // Display marksheet
    printf("\nMarks Entered\n");
    printf("-------------------------------------------------\n");
    printf("Student\t");
    for (j = 0; j < SUBJECTS; j++) {
        printf("Subject %d\t", j + 1);
    }
    printf("\n-------------------------------------------------\n");

    for (i = 0; i < STUDENTS; i++) {
        printf("%d\t", i + 1);
        for (j = 0; j < SUBJECTS; j++) {
            printf("%d\t\t", marks[i][j]);
        }
        printf("\n");
    }

    // Find highest marks in each subject
    printf("\nHighest Marks in Each Subject:\n");
    for (j = 0; j < SUBJECTS; j++) {
        int max = marks[0][j]; // assume first student's marks is highest
        for (i = 1; i < STUDENTS; i++) {
            if (marks[i][j] > max) {
                max = marks[i][j];
            }
        }
        printf("Subject %d: %d\n", j + 1, max);
    }

    return 0;
}

