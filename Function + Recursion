// Basic code of function 
TO ADD TWO VARIABLES

#include <stdio.h>

//function prototype
int sum(int ,int);

// function definition
int sum(int x,int y){
    
    printf("The sum is %d\n",x+y);
    return x+y;
    
}

int main() {
    
    int a = 10 ;
    int b = 12 ;
    sum(a,b);
    
    // int c = a+b;
    // printf("the sume is %d \n",c);
    
    int a1= 12;
    int b1 = 22;
    sum(a1,b1);
    // int c1 = a1+b1;
    // printf("the sume is %d \n",c1);
    

    return 0;
}




TO FIND FACTORIAL USING FUNCTION

#include<stdio.h>

int factorial();

int factorial(int n){

// this is the base case , if we dont add the base case the function will run continously thats why base case required 
if(n==1 || n==0){  
return 1 ;
}

// The below is the function it will work like 
// 5x4
// 5x4x3
// 5x4x3x2
// 5x4x3x2x1 it will stop at one 
return n* factorial (n-1);
}

int main(){
int a = 3;
printf("The factorial of %d is %d ",a ,factorial(a));
return 0;
}




WRITE A PROGRAM USING FUNCTION TO FIND AVERAGE OF THREE NUMBERS

#include<stdio.h>

float average(int a , int b , int c );   

float average(int a , int b , int c ){
return (a+b+c)/3;
}

int main(){
int x = 10;
int y = 10;
int z = 10;

//here we have used float for the output .2 decimals
float op = average(x,y,z);
printf("The average od three number is %.2f",op);
}





W A P  TO CONVERT DEGREE INTO FAHRENHEIT

#include<stdio.h>

float fah(float degre);   
// THIS IS THE FORMULA TO CONVERT DEGREE INTO FAHRENHEIT
// f = (c * 9/5) + 32
float fah(float degre){
return (degre*9/5)+32;
}

int main(){
float degre = 32;

float op = fah(degre);
printf("The average od three number is %.2f",op);
}






WAP PROGRAM FOR FIBONACCI SERIES 
USING FOR LOOP
// F(n)=F(n−1)+F(n−2)
// Fibonacci series is 0, 1, 1, 2, 3, 5, 8, 13, ...
#include <stdio.h>

int main() {
    int n, i;
    int a = 0, b = 1, next;

    printf("Enter the number of terms: ");
    scanf("%d", &n);

    printf("Fibonacci Series: ");
    
    for(i=1 ; i<=n ; i++){
        printf("%d",a);
        next = a+b;
        a = b;
        b = next;
    }

    return 0;
}





WAP PROGRAM FOR FIBONACCI SERIES
USING RECURSIVE FUNCTION

#include <stdio.h>

int fib(int);


int fib(int n){
    if(n==1 || n ==2){
        return n-1;
        }
    return fib(n-1)+fib(n-2);
}
// main function 
    int main(){
    int n = 3;
    printf("%d",fib(n));
    
    
    return 0;    
    }





WAP PROGRAM TO SUM OF FIRST NATURAL NUMBERS 
#include <stdio.h>

int natural_no(int n);

int natural_no(int n){
    if(n==1){
        return 1;
    }
    return n + natural_no(n-1);
}

    int main(){
        printf("the sum of first natural nmber is %d",natural_no(5));
    return 0;    
    }




W A P TO PRINT * 

#include <stdio.h>

int main(){
   int n  = 3;
   
  for (int i=0 ; i<=3 ; i++){
      // this loop will run from 0 to 2 
      printf("\n");

      // if i = 1 print 1 star 
      // if i = 2 print 3 stars 
      // if i = 3 print 5 stars 
      
      // The main part is j <= (2*i-1); 

      for(int j=0 ; j <2*i-1 ; j++){
          printf("* ");
      }
  }
   return 0;    
}
    

